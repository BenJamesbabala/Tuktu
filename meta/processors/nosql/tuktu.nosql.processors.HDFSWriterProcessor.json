{
	"name": "HDFS Writer Processor",
	"class": "tuktu.nosql.processors.HDFSWriterProcessor",
	"parameters": [
		{
			"name": "id",
			"type": "string",
			"required": true
		},
		{
			"name": "result",
			"type": "string",
			"required": true
		},
		{
			"name": "config",
			"type": "object",
			"required": true,
			"parameters": [
				{
					"name": "uri",
					"type": "string",
					"required": true,
					"description" : "Location of HDFS; e.g. hdfs://localhost:51234"
				},
				{
					"name": "file_name",
					"type": "string",
					"required": true,
					"description" : "Path of the file to write to"
				},
				{
					"name": "fields",
					"type": "array",
					"required": true,
					"parameters": [
						{
							"name": "",
							"type": "string",
							"required": true
						}
					],
					"description" : "All the fields that need to be writen to HDFS"
				},
				{
					"name": "field_separator",
					"type": "string",
					"required": true,
					"description": "A separator for separating fields"
				},
				{
					"name": "datapacket_separator",
					"type": "string",
					"required": true,
					"description": "A separator for separating datapackets"
				},
				{
					"name": "replication",
					"type": "int",
					"required": false,
					"description": "Replication factor of the file on HDFS. Default is 3"
				}
			]
		}
	]
}
